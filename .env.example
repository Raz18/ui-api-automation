# ControlUp Automation Test Suite - Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# UI Test Configuration (SauceDemo)
# =============================================================================

# SauceDemo application URL
BASE_URL=https://www.saucedemo.com

# Browser configuration
HEADLESS=true
SLOWMO=0

# SauceDemo site credentials
SAUCE_USERNAME=standard_user
SAUCE_PASSWORD=secret_sauce

# =============================================================================
# API Test Configuration (Airport Gap)
# =============================================================================

# Airport Gap API base URL
AIRPORT_GAP_BASE_URL=https://airportgap.com/

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log directory (relative to project root)
LOG_DIR=logs

# =============================================================================
# Test Execution Settings
# =============================================================================

# Playwright browser timeout (milliseconds)
TIMEOUT=30000

# Screenshots directory (relative to project root)
SCREENSHOTS_DIR=screenshots

# Reports directory (relative to project root)
REPORTS_DIR=reports

# =============================================================================
# Development & Debugging
# =============================================================================

# Set to false for visible browser during development
# HEADLESS=false

# Add delay between actions for demo purposes (milliseconds)
# SLOWMO=500

# Enable detailed logging for troubleshooting
# LOG_LEVEL=DEBUG

# =============================================================================
# CI/CD Environment Overrides
# =============================================================================

# Example CI/CD settings (uncomment as needed)
# HEADLESS=true
# LOG_LEVEL=WARNING
# TIMEOUT=60000
